{
  "name": "jobhackai-app",
  "version": "1.0.0",
  "description": "JobHackAI Cloudflare Application",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3003",
    "build": "next build",
    "postbuild": "cp -f public/_redirects out/_redirects && cp -f public/_headers out/_headers && cp -f ../index.html out/index.html && (cp -f ../*.html out/ 2>/dev/null || true) && cp -r ../css out/ && cp -r ../js out/ && cp -r ../assets out/",
    "start": "next start",
    "export": "next build && next export",
    "deploy": "wrangler pages deploy out",
    "deploy:qa": "wrangler pages deploy out --project-name=jobhackai-app-dev --branch dev0",
    "deploy:prod": "wrangler pages deploy out --branch main",
    "test:e2e": "playwright test --config tests/playwright.config.js",
    "test:e2e:dev": "TEST_ENV=dev playwright test --config tests/playwright.config.js",
    "test:e2e:qa": "TEST_ENV=qa playwright test --config tests/playwright.config.js"
  },
  "dependencies": {
    "firebase": "^10.7.0",
    "jose": "^5.0.0",
    "mammoth": "^1.6.0",
    "next": "^14.0.0",
    "openai": "^4.20.0",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.0.0",
    "tesseract.js": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}
